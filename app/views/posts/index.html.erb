<h1 class='card-title'>Creed's Thoughts</h1>
<% @posts.each do |post| %>
<div class="container">
      <div class="card-deck">
        <div class="card bg-light mb-3">
            <div class="card-header"><%= post.title %></div>
              <div class="card-body">
                <p> <%= post.body %> </p>
                <%= link_to "Read More", post_path(post), :class => 'btn btn-primary'%>
              </div>
            </div>
          </div>
      </div>
</div>
<% end %>

